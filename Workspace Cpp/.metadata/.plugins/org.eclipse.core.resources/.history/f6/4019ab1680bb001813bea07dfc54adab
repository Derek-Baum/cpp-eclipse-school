#include <iostream>
#include <stdio.h>
#include <math.h>
#include <ctime>

using namespace std;
void nextProblem();
void printAddress();
void addFour(int x);
int randomInt();


int main(){

	printAddress();

	nextProblem();

	int x = 10;
	cout << x << endl;
	cout << &x << endl;
	addFour(x); // this is call by value, it creates local x and adds four

	nextProblem();

	int y = randomInt();
	cout << y << endl;
	cout << &y << endl;

	nextProblem();



	return 0;
}

void nextProblem(){
	cout << "" << endl;
	cout << "@@@@@@@@@@@@@@@@@@@@@NEXT@@PROBLEM@@@@@@@@@@@@@@@@@@@@@" << endl;
	cout << "" << endl;
}

void printAddress(){
	int x = 3;
	cout << x << endl;
	cout << &x << endl;
}

void addFour(int x){
	x+=4;
	cout << x << endl;
	cout << &x << endl;
}

int randomInt(){

	srand((int) time(0));
	int x =
			rand() % 50;
	cout << x << endl;
	cout << &x << endl;

	return x;
}
