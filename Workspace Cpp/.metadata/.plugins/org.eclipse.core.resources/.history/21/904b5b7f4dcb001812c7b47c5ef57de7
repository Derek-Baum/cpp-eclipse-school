#include <iostream>
using namespace std;
void modifyX(int *x);
void modifyRef(int &x);

int main() {
	int *test = new int[5];
	for(int i = 0; i < 5; i++){
		test[i] = i*2;
	}

	cout<<test[2]<<endl;
	test[2]+=3;
	cout<<test[2]<<endl;

	return 0;
}

// call by pointer
// you are giving the function the address variable
void modifyX(int *x){
	*x = 9;
}

// call by reference
// you are assigning a new variable to the memory address that is passed in
// this is java

void modifyRef(int &x){
	x = 900;
}
