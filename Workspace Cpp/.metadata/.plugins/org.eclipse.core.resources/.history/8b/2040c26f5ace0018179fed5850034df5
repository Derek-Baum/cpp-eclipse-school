#include <iostream>
#include "LLPQ.hpp"

using namespace std;

LLPQ::LLPQ(){
	first = NULL;
	last = NULL;
	size = 0;
}
LLPQ::~LLPQ(){
	LLNode *tmp = first;
	while(tmp!= NULL){
		LLNode *next = tmp->right;
		tmp->~LLNode();
		tmp = next;
	}
	cout<<"Deleted each node in ll"<<endl;
}
void LLPQ::printLLPQ(){
	LLNode *tmp = first;
	while(tmp!=NULL){
		tmp->printNode();
		tmp = tmp->right;
	}
	cout<<endl;
}
void LLPQ::addFirst(char x, string co,int freq){
	first = new LLNode(x,"-1",freq);
	size++;
}
void LLPQ::addAtFirst(char x, string co, int freq){
	LLNode *tmp = new LLNode(x,co,freq);
	tmp->right = first;
	tmp->right->left = tmp;
	first = tmp;
	size++;
}

LLNode* LLPQ::remFirst(){
	LLNode *ret = first;
	first = first->right;
	first->left = NULL;
	size--;

	return ret;
}
string LLPQ::findCode(char k){
	LLNode *tmp = first;
	while(tmp->c != k && tmp != NULL){
		tmp = tmp->right;
	}
	return tmp->code;
}
void LLPQ::sortLL(LLNode** head){
	LLNode *tmp = first;
	LLNode *a;
	LLNode *b;

	if(tmp == NULL || tmp->right == NULL){
		return;
	}

	splitter(tmp,&a,&b);





}
LLNode* LLPQ::Merge(LLNode* a, LLNode* b){
	LLNode *output = NULL;
	if(a == NULL){
		return b;
	}else if(b == NULL){
		return a;
	}

	if(a->frequency <= b->frequency){
		output = a;
		output->right = Merge(a->right,b);
	}else{
		output = b;
		output->right = Merge(a,b->right);
	}
	return output;
}
void LLPQ::splitter(LLNode* head,LLNode** front, LLNode** back){
	LLNode *tmp = head;
	LLNode *middle = head->right;

	while(tmp != NULL){
		tmp = tmp->right;
		if(tmp!= NULL){
			tmp=tmp->right;
			middle=middle->right;
		}
	}

	*front = head;
	*back = middle->right;
	middle->right = NULL;


}
