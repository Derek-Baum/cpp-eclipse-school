#include <iostream>
#include "LLPQ.hpp"
#include "LLNode.hpp"
#include <stdlib.h>
#include <fstream>


using namespace std;


int main(){

	LLPQ test;
	char ch;
	fstream fin("test.txt",fstream::in);
	while(fin >> noskipws >> ch){
		test.insertUnique(ch);
	}

	test.printLLPQ();
	cout<<endl<<endl;
	cout<<"reading file"<<endl;
	LLHuff code("test.txt");
	code.ReadFile();
	code.pq->printLLPQ();
	code.pq->sortLL();
	code.pq->printLLPQ();
	code.MakeHuff();
	code.compressFile();
	code.ReadAscii();
	return 0;
}


