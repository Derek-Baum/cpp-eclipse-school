#include <iostream>
#include "SNode.hpp"

using namespace std;

SNode::SNode(){
	cout<<"Input a rating."<<endl;
	cin >> this->rating;
	cout<<"Input comments."<<endl;
	cin.clear();
	cin.sync();
	getline(cin,this->comments);
	next = NULL;
}
SNode::SNode(int r, string c){
	rating = r;
	comments = c;
	next = NULL;
}
SNode::~SNode(){
	cout<<"deleting "<<rating<<", "<<comments<<endl;
}
void SNode::printNode(){
	cout<<"Rating: "<<rating<<",";
	cout<<"Comments: "<<comments<<endl;
}
