		LLNode *parent = new LLNode('*',"-1",tmp->frequency + tmp2->frequency);
		parent->left = tmp;
		parent->right = tmp2;
		test.insertInOrder(parent);
	}
	 */
	cout<<"we have turned the priority queue into a tree"<<endl;
	test.printLLPQ();

